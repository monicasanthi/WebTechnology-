//styles.css
/* Body style with background image */
body {
    background-image: url('https://www.hdwallpapers.in/download/sunset_scenery-wide.jpg');
    background-repeat: repeat; /* The image will repeat both horizontally and vertically */
    background-size: auto; /* Default size */
    font-family: Arial, sans-serif;
}
/* Style for the text */
h1, p {
    color: white;
    text-shadow: 2px 2px 4px #000000;
    text-align: center;
}
